<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".slotbook.VaccineBookingActivity"
    android:weightSum="10">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/HeaderCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/your_card_background_color"
        app:cardElevation="4dp"
        app:shapeAppearance="@style/ShapeAppearance.CustomCard">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/profile"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/NameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Patel Neet Rameshbhai"
                android:textColor="@color/ButtonColor"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/UserAgeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age: 20"
                android:textColor="@color/ButtonColor"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/UserMailTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email id: nitptl19705@gmail.com"
                android:textColor="@color/ButtonColor"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/UserNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name: Neet Patel"
                android:textColor="@color/ButtonColor"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/UserPhonTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone no:- 9023434403"
                android:textColor="@color/ButtonColor"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="28dp"
                android:text="Log Out" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>